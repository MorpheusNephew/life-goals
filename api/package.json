{
  "name": "api-proxy",
  "version": "1.0.0",
  "description": "GraphQL server that will handle all communications with back-end services",
  "main": "index.js",
  "author": "Jelani Jackson",
  "license": "MIT",
  "private": true,
  "scripts": {
    "compile": "tsc",
    "start": "yarn compile && node -r dotenv/config ./dist/index.js",
    "dev": "nodemon --exec \"ts-node -r dotenv/config ./src/index.ts\" --watch ./src -e .ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-oauth2-jwt-bearer": "^1.4.0"
  }
}
